{
    "compilerOptions": {
        "target": "es5",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true
    },
    "include": [
        "src/**/*",
        "src/templates/**/*"
    ],
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}
